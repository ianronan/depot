<h1>List of Current Orders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Payment type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to image_tag("view.jpg"), order %></td>
        <td><%= link_to image_tag("edit.jpg"), edit_order_path(order) %></td>
        <td><%= link_to image_tag("delete.jpg"), order, method: :delete, data: { confirm: 'Are you sure you want to delete this order?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

